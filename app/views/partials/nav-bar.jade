header.hidden-xs
  include cookie
  .container
    .row
      .col-md-12
        a.logo(href="/")
          img(src="/images/" + section.logo)
        ul.nav
          each nav in section.navLinks
            li
              - if (nav.modal) {
                a(class="menu", model-form,
                  src-model="form." + nav.id + "",
                  tpl-url=nav.tplUrl, method=nav.method,
                  path=nav.path,
                  dialog-class="big")= nav.text
              - } else {
                a(href=nav.link, class="menu", scroll=nav.scroll)= nav.text
              - }
        .clear
