doctype html
html(ng-app="ten20Angular")
  include ../partials/build/head
  body(ng-controller="RootCtrl")
    .blog-wrapper
      include ../partials/nav-bar.jade
      include ../partials/nav-bar-mobile.jade
      .blog-content
        .container
          .row
            .col-md-8
              block content
            .col-md-4

              form(action="/blogs-search")
                .blog-search.input-group
                  input.form-control(type="text", name="key")
                  span.input-group-btn
                    input.btn.btn-default(type="submit", value="Go")
                      span.glyphicon.glyphicon-search

              h6.nav-header advertisement
              div.
                 <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                 <!-- blog -->
                 <ins class="adsbygoogle"
                      style="display:inline-block;width:300px;height:250px"
                      data-ad-client="ca-pub-2006916188932710"
                      data-ad-slot="5612486949"></ins>
                 <script>
                 (adsbygoogle = window.adsbygoogle || []).push({});
                 </script>
              h6.nav-header recent posts
                a.pull-right(href="/blog-rss")
                  img(src="/images/feed-icon.png")
              ul.nav.nav-pills.nav-stacked
                - each post in getPosts(0, 5)
                  li
                    a(href=post.url) #{post.title}
              h6.nav-header tags
              ul.nav.nav-pills.nav-stacked
                - each tag in getTags()
                  li.tag
                    a(href=tagURL(tag)) #{tag}
    .push
