extends ../layout

block content
  .wrapper(ng-controller=controller)
    include ../partials/cookie.jade
    include ../partials/nav-bar.jade
    include ../partials/nav-bar-mobile.jade
    .container
      .row
        .span8
          block content
        .span4
          .well.sidebar-nav
            ul.nav.nav-list
              li.nav-header categories
              - each cat in getCategories()
                li
                  a(href=categoryURL(cat)) #{cat}
              li.nav-header tags
              - each tag in getTags()
                li
                  a(href=tagURL(tag)) #{tag}
