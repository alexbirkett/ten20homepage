doctype 5
html(ng-app="ten20Angular")
  include ../partials/build/head
  body(ng-controller="RootCtrl")
    .blog-wrapper
      include ../partials/nav-bar.jade
      include ../partials/nav-bar-mobile.jade
      .blog-content
        .container
          .row
            .col-md-8
              block content
            .col-md-4
              form(action="/blogs-search")
                .blog-search.input-group
                  input.form-control(type="text", name="key")
                  span.input-group-btn
                    input.btn.btn-default(type="submit", value="Go")
                      span.glyphicon.glyphicon-search

              ul.nav.nav-pills.nav-stacked
                li.nav-header recent posts
                  a.pull-right(href="/blog-rss")
                    img(src="/images/feed-icon.png")
                  - each post in getPosts(0, 5)
                    li
                      a(href=post.url) #{post.title}
                li.nav-header tags
                - each tag in getTags()
                  li
                    a(href=tagURL(tag)) #{tag}
    .push
