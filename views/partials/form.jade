section.contact(id=section.name)
  .form
    div.cancel
      span X
    img(src="/images/" + section.logo)
    h3.description.active= section.description
    h3.success= section['success-message']
    h3.require= section['require-message']
    h3.error= section['error-message']

    form
      ul
        each item in section.items
          li(class="list-" + item.type)
            if item.optional
              label(for=item.name)  #{item.label}
            else 
              label(for=item.name)  #{item.label}*
            input(type=item.type, id=item.name, optional="" + item.optional)
        li.btn-wrap
          button(type="submit") send
          p *Required
    script.
      $(function() { new ten20.ContactForm(!{JSON.stringify(section.name)}); });
